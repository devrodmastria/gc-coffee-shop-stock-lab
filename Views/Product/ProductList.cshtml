@model List<Product>;

<div style="align-content:flex-start">
    <h1 class="display-4">Coffee Shop Menu Demo</h1>

    <ul>
        @{
            foreach (Product p in Model)
            {
                <li><a asp-action="Description"
                       asp-route-coffeeid="@p.Id" asp-controller="Product">@p.Name</a> -- $@p.Price
                </li>
            }
        }

    </ul>
</div>